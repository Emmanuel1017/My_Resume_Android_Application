<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/idItemCardLinearlayout"
        android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:gravity="right"
        android:orientation="horizontal">

        <com.skydoves.transformationlayout.TransformationLayout
            android:id="@+id/transformation_Layout_Experiences_Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_20dp"
            app:transformation_duration="650">


        <ImageView
            android:id="@+id/Experiences_Thumbnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        </com.skydoves.transformationlayout.TransformationLayout>

    </LinearLayout>





        <TextView
            android:id="@+id/Experince_Company_Name"
            android:text="Company Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_margin="3dp"
            android:gravity="center"
            android:padding="4dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Experiences_Website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="Website"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Experiences_Country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="4dp"
            android:text="Country"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Experiences_City"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="4dp"
            android:text="City"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Experiences_Role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="4dp"
            android:text="Role"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <!--text view for course price-->
            <TextView
                android:id="@+id/Experiences_Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/margin_10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Experiences_StartAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Start At"
                android:textColor="#B9555555"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="-"
                android:textColor="#B94C4C4C"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/Experiences_EndAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="End At"
                android:textColor="#B93E3E3E"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>



        <View
            android:id="@+id/view_contact_1"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:layout_height="0.7dp"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center|center_horizontal"
            android:background="@color/colorPrimary"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>