<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?android:windowTranslucentNavigation"
    android:layout_marginTop="?android:windowTranslucentStatus"
    android:fitsSystemWindows="true"
    android:id="@+id/main_layout_mydata"
    tools:context=".My_data">

    <ImageView
        android:id="@+id/back_button_my_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="37dp"
        android:elevation="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />



    <com.skydoves.progressview.ProgressView
        android:id="@+id/progressView_download"
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_height="20dp"
        app:progressView_colorBackground="@color/white"
        app:progressView_colorProgress="@color/colorPrimary"
        app:progressView_min="0"
        app:progressView_max="100"
        app:progressView_progressFromPrevious="true"
        app:progressView_radius="12dp"
        app:progressView_padding="1dp"
        app:progressView_labelColorInner="#737373"
        app:progressView_labelColorOuter="#FFFFFF"
        app:progressView_labelSize="13sp"
        app:progressView_labelSpace="10dp"
        app:progressView_labelText="downloading document"
        app:progressView_labelTypeface="bold" />






    <include layout="@layout/content_scrolling" />



</androidx.coordinatorlayout.widget.CoordinatorLayout>