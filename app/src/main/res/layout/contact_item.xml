<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/idItemCardLinearlayout"
        android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
     <!--image view for our course-->
        <ImageView
            android:id="@+id/idIconLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_icons_3"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request From:"
            android:layout_gravity="center"
            android:id="@+id/RequestFromWho"
            android:textColor="@color/colorPrimary"
            android:textSize="19sp"
            android:layout_margin="3dp"
            android:gravity="center"
            android:padding="4dp"
            android:textStyle="bold" />

    </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="@color/colorTextDisabled"
                android:textSize="15sp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:padding="4dp"
                android:textStyle="bold" />


            <!--text view for course price-->
            <TextView
                android:id="@+id/idEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message:"
                android:textColor="@color/colorTextDisabled"
                android:textSize="15sp"
                android:layout_margin="3dp"
                android:gravity="center"
                android:padding="4dp"
                android:textStyle="bold" />


            <!--text view for course price-->
            <TextView
                android:id="@+id/message_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Message"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sent:"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:gravity="center"
                android:padding="4dp"
                android:textStyle="bold" />


            <!--text view for course price-->
            <TextView
                android:id="@+id/idTimeStamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/view_contact_1"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:layout_height="0.7dp"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center|center_horizontal"
            android:background="@color/colorPrimary"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>