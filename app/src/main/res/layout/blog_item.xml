<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/idItemCardLinearlayout"
        android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <com.skydoves.transformationlayout.TransformationLayout
            android:id="@+id/transformation_Layout_Blog_Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transformation_Layout_Post_By_Dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            app:transformation_duration="650">


        <ImageView
            android:id="@+id/Blog_Thumbnail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        </com.skydoves.transformationlayout.TransformationLayout>

    </LinearLayout>





        <TextView
            android:text="Blog_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/Blog_Title"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_margin="3dp"
            android:gravity="center"
            android:padding="4dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <!--text view for course price-->
            <TextView
                android:id="@+id/Blog_Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--text view for course price-->
            <TextView
                android:id="@+id/Read_More"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:gravity="center"
                android:padding="4dp"
                android:text="Read More..."
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">


            <!--text view for course price-->
            <TextView
                android:id="@+id/Blog_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Date"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/view_contact_1"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:layout_height="0.7dp"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center|center_horizontal"
            android:background="@color/colorPrimary"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>